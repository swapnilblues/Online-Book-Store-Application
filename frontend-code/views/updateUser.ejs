<%- include('header'); -%>
<%- include('logout'); -%>
<div class="container">
    <h1>Update Profile</h1>
    <form id = "form1" style="max-width: 300px">
        
        <div class="form-group">
            <input class="form-control" value = "<%= user.first_name %>" type="text" name="first_name" placeholder="Enter First Name" />
        </div>
        <div class="form-group">
            <input class="form-control" value = "<%= user.last_name %>" type="text" name="last_name" placeholder="Enter Last Name" />
        </div>
        <div class="form-group">
            <input class="form-control" value = "<%= user.username %>" type="text" name="username" placeholder="Username" readonly/>
        </div>
        <div class="form-group">
            <input class="form-control" value = "<%= user.password %>" type="password" name="password" placeholder="Password" />
        </div>
        <div class="form-group">
            <input class="form-control" value = "<%= user.address.address %>" type="text" name="address" placeholder="Address" />
        </div>
        <div class="form-group">
            <input class="form-control" value = "<%= user.address.pincode %>" type="number" name="pincode" placeholder="Pincode" />
        </div>
        <div class="form-group">
            <input class="form-control" value = "<%= user.address.city %>" type="text" name="city" placeholder="City" />
        </div>
        <div class="form-group">
            <input class="form-control" value = "<%= user.address.state %>" type="text" name="state" placeholder="State" />
        </div>
        <div class="form-group">
            <input class="form-control" value = "<%= user.address.country %>" type="text" name="country" placeholder="Country" />
        </div>
        <button class="btn btn-default" onclick="myFunction()" type="submit">Submit</button>
    </form>
</div>
<%- include('footer'); -%>
